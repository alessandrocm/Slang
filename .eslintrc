{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            2,
            "global"
        ],
        "handle-callback-err": [
            2, 
            "^(err|error|anySpecificError)$" 
        ]
    },
    "env": {
        "node": true
    },
    "extends": "eslint:recommended"
}